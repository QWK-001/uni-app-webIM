<view class="inform"><block tt:if="{{!friendList.length>0}}"><text class="defaultText">暂时没有新的通知</text></block><block tt:for="{{friendList}}" tt:for-item="item" tt:for-index="index" tt:key="index"><view class="itemBar"><view class="notInfoDetContent"><view class="headContent"><image src="../../static/images/theme@2x.png"></image></view><view class="infoContent"><text class="itemName">{{item.from}}</text><text>申请添加您为好友</text></view></view><view class="buttonContent"><block tt:if="{{!item.typeText}}"><view class="rejectBtn" data-from="{{item.from}}" data-event-opts="{{[['tap',[['reject',['$event']]]]]}}" bindtap="__e">拒绝</view></block><block tt:if="{{!item.typeText}}"><view class="centerLine"></view></block><block tt:if="{{!item.typeText}}"><view class="agreeBtn" data-from="{{item.from}}" data-event-opts="{{[['tap',[['agree',['$event']]]]]}}" bindtap="__e">同意</view></block><block tt:if="{{item.typeText}}"><view class="actionDone">{{item.typeText}}</view></block></view></view></block></view>